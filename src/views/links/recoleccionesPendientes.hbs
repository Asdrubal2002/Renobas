<div class="containerBoton">
  <div class="btn-mas">
      <a href="/profile" style="text-decoration:none" ;><label class="fas fa-home"></label></a>
  </div>
</div>
<div class="container p-3">
    <div class="row">
        {{#each recolectasAceptadas}}
        <div class="card">
            <div class="card-header">
                <strong>Detalles de recolección de {{material}}</strong>
            </div>
            <div class="card-body">
                <div class="container px-4">
                    <div class="row gx-5">
                        <div class="col">
                            <div class="p-3 ">
                                <p class="card-text">Cantidad: <strong>{{cantidad}}</strong></p>
                                <p class="card-text">Precio: <strong>{{precio}}</strong></p>
                                <p class="card-text">Clasificados: <strong>{{clasificacion}}</strong></p>
                                <p class="card-text">Toxico: <strong>{{toxico}}</strong></p>
                                <p class="card-text">Limpio: <strong>{{limpio}}</strong></p>
                                <p class="card-text">Material: <strong>{{material}}</strong></p>
                                <p class="card-text">Estado: <strong>{{estado}}</strong></p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="p-3">
                                <p class="card-text">Lugar de recolección: <strong>{{nombreLugarRecolectores}}</strong>
                                </p>
                                <p class="card-text">dirección: <strong>{{direccion}}</strong></p>
                                <p class="card-text" style="color: rgb(194, 17, 17);">Encargado de recibir:
                                    <strong>{{nombreRecibe}}</strong>
                                </p>
                                <p class="card-text">Administrador: <strong>{{administradorRecoleccion}}</strong></p>
                                <p class="card-text">Teléfono: <strong>{{administradorTelefono}}</strong></p>
                                <p class="card-text">Fecha escogida de entrega: <strong>{{fecha}}</strong></p>
                                <p class="card-text">Hora de entrega: <strong>{{horario}}</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container px-6">
                    <div class="row gx-5">
                        <div class="col">
                            <div class="p-3">
                                <div class="container px-4">
                                    <div class="row gx-5">
                                        <div class="col">
                                            <div>
                                                <form action="/links/calificacionReciclador/{{id}}" class="calificacionReciclador">
                                                    <button type="submit" class="btn btn-success">Calificar a {{nombreLugarRecolectores}}</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center text-dark">
                <p>No tienes recolecciones pendientes</p>
                <a href="/links/recolectas"><button type="button" class="btn btn-primary">Solicitudes /
                        Recolecciones</button></a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script>
    $('.calificacionReciclador').submit(function (e) {
        e.preventDefault();
        Swal.fire({
            title: '¿Seguro?',
            text: "¿Ya te recogieron tu recolección?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonText: 'No',
            confirmButtonText: 'Si',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                this.submit();
                document.getElementById("loader").style.display = "block";
            }
        })
    });
</script>