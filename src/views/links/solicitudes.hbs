<div class="containerBoton">
  <div class="btn-mas">
      <a href="javascript: history.go(-1)" style="text-decoration:none" ;><label class="fas fa-arrow-left"></label></a>
  </div>
</div>
<div class="container p-4">
  <div class="row">
    
    {{#each solicitudes}}
    <div class="card text-center mb-3">
      <div class="card-header">
        <strong>Entrega: </strong>{{fechaRecoleccion}} - {{horario}}
      </div>
      <div class="card-body">
        <h5 class="card-title">{{material}}</h5>
        <!-- <p class="card-text"></p> -->
        <form action="/links/deleteSolicitudes/{{id}}" class="ActionForm">
          <a><button type="submit" class="btn btn-danger">Eliminar Solicitud</button></a>
          <a href="/links/detelles/{{id}}" class="btn btn-warning">Detalles</a>
        </form>
      </div>
      <div class="card-footer text-muted">
        {{estado}}
      </div>
    </div>

    {{else}}
    <div class="col-md-6 mx-auto">
      <div class="card card-body text-center text-dark">
        <p>No tienes solicitudes enviadas. Busca tu barrio.</p>
        <div class="box">
          <div class="container-4">
            <form action="/links/busqueR" method="POST">
              <input type="text" id="search" name="search" placeholder="Busca barrio: Belen, Manrique, Poblado" />
              <button type="submit" class="icon seguir"><i class="fa fa-search"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<div class="col-md-6 mx-auto">
      <div class="card card-body text-center text-dark">
        <a href="/links/recolectasAceptadas"><button type="button" class="btn btn-primary">Recolecciones Aceptadas</button></a>
      </div>
    </div>

<script>
  $('.ActionForm').submit(function (e) {
    e.preventDefault();
    Swal.fire({
      title: 'Confirmación',
      text: "¿Quieres cancelarla?",
      icon: 'info',
      showCancelButton: true,
      confirmButtonColor: '#c51162',
      cancelButtonText: 'No, Cancelar',
      confirmButtonText: 'Si, Cancelar',
      reverseButtons: true
    }).then((result) => {
      if (result.isConfirmed) {
        this.submit();
      }
    })
  });
</script>